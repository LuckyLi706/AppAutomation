<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- 1. 左侧：标题和状态文本 -->
    <!-- 注意：这里的 paddingEnd 是为了和右边按钮隔开一点距离 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            tools:text="自动化任务名称" />

        <TextView
            android:id="@+id/tv_notification_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Line2"
            tools:text="运行中" />
    </LinearLayout>

    <!-- 2. 右侧按钮区域 (上下排列) -->
    <!-- 这里的 layout_height 也不能固定，让它由内容决定 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- 按钮1: 暂停/继续 -->
        <LinearLayout
            android:id="@+id/btn_notification_pause_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minWidth="64dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iv_pause_continue"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_pause" />

            <TextView
                android:id="@+id/tv_pause_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Info"
                android:textSize="13sp"
                tools:text="暂停" />
        </LinearLayout>

        <!-- 按钮2: 结束 -->
        <LinearLayout
            android:id="@+id/btn_notification_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iv_stop"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_stop" />

            <TextView
                android:id="@+id/tv_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="结束"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Info"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
